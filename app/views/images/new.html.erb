<h1>画像追加</h1>

<div class="inputForm">
<%= form_for(@image) do |f| %>

<table>

<tr>
<td>商品番号</td>
<td><%= f.text_field :item_number, placeholder: "例 kav-201" %></td>
</tr>
<tr>
<td>画像URL共通部分</td>
<td><%= f.text_field :imageURLCommonPart, placeholder: "例 vanson/kav-201-1.jpg" %></td>
</tr>
<tr>
<td>説明文</td>
<td><%= f.text_field :description , placeholder: "例 カラーバリエーションは100色" %></td>
</tr>
<tr>

</table>

<%= f.submit id:"submitButton" %>
<% end %>
</div>
